{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [ "error", "tab", { "SwitchCase": 1 } ],
        "no-mixed-spaces-and-tabs": ["error", "smart-tabs"]
    }
}